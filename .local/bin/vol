#!/bin/sh

status="$(pulseaudio-ctl full-status)"
vol="$(echo $status | cut -d' ' -f1)"
mute="$(echo $status | cut -d' ' -f2)"
if [ "$mute" = "yes" ]
then
	printf "ğŸ”‡"
else
	if [ "$vol" -ge 100 ]
	then
		symbol="ğŸ”Š"
	elif [ "$vol" -ge 50 ]
	then
		symbol="ğŸ”‰"
	else
		symbol="ğŸ”ˆ"
	fi
	echo "$symbol$vol"
fi
